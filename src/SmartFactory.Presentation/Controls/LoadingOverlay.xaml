<UserControl x:Class="SmartFactory.Presentation.Controls.LoadingOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="300">

    <Border Background="#CC1A1D21">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">
                <!-- Spinning Icon -->
                <Border Width="60" Height="60"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="30"
                        Margin="0,0,0,16">
                    <iconPacks:PackIconMaterial Kind="Cog"
                                                Width="30" Height="30"
                                                Foreground="{StaticResource AccentBrush}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                RenderTransformOrigin="0.5,0.5">
                        <iconPacks:PackIconMaterial.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotation"/>
                        </iconPacks:PackIconMaterial.RenderTransform>
                        <iconPacks:PackIconMaterial.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360"
                                                         Duration="0:0:2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </iconPacks:PackIconMaterial.Triggers>
                    </iconPacks:PackIconMaterial>
                </Border>

                <!-- Loading Message -->
                <TextBlock x:Name="MessageText"
                           Text="{Binding Message, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue='Loading...'}"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <!-- Sub Message -->
                <TextBlock x:Name="SubMessageText"
                           Text="{Binding SubMessage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Foreground="{StaticResource SecondaryTextBrush}"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Visibility="{Binding SubMessage, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=True}"/>

                <!-- Progress Bar (optional) -->
                <ProgressBar x:Name="ProgressBar"
                             Width="200"
                             Height="4"
                             Margin="0,16,0,0"
                             IsIndeterminate="{Binding IsIndeterminate, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="{Binding Progress, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Maximum="100"
                             Visibility="{Binding ShowProgress, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
