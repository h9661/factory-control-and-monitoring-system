{
  "ConnectionStrings": {
    "SmartFactory": "Server=.;Database=SmartFactory;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "OpcUa": {
    "ServerUrl": "opc.tcp://localhost:4840",
    "SessionTimeout": "00:30:00",
    "DefaultSamplingInterval": 1000,
    "UseSecurity": false,
    "MaxReconnectAttempts": 10,
    "ReconnectDelay": "00:00:05"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/smartfactory-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "Application": {
    "Title": "Smart Factory System",
    "Version": "1.0.0",
    "RefreshIntervalSeconds": 5,
    "AlarmPollingIntervalSeconds": 10,
    "SensorDataRetentionDays": 90
  }
}
