{
  "ConnectionStrings": {
    "SmartFactory": "Data Source=SmartFactory.db"
  },
  "OpcUa": {
    "ApplicationName": "SmartFactory.OpcUaClient",
    "ApplicationUri": "urn:SmartFactory:OpcUaClient",
    "ProductUri": "urn:SmartFactory:OpcUaClient",
    "SessionTimeoutMs": 60000,
    "PublishingIntervalMs": 1000,
    "SamplingIntervalMs": 500,
    "AutoReconnect": true,
    "ReconnectIntervalMs": 5000,
    "Servers": [
      {
        "Id": "PlcSimulator",
        "Name": "PLC Simulator",
        "EndpointUrl": "opc.tcp://localhost:4840",
        "SecurityPolicy": "None",
        "SecurityMode": "None",
        "UserIdentityType": "Anonymous",
        "AutoConnect": false,
        "Nodes": [
          {
            "NodeId": "ns=2;s=Machine1.Temperature",
            "DisplayName": "Machine 1 Temperature",
            "SensorType": "Temperature",
            "Unit": "Â°C",
            "SamplingIntervalMs": 500
          },
          {
            "NodeId": "ns=2;s=Machine1.Vibration",
            "DisplayName": "Machine 1 Vibration",
            "SensorType": "Vibration",
            "Unit": "mm/s",
            "SamplingIntervalMs": 500
          },
          {
            "NodeId": "ns=2;s=Machine1.Status",
            "DisplayName": "Machine 1 Status",
            "SensorType": "Status",
            "SamplingIntervalMs": 1000
          }
        ]
      }
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/smartfactory-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "Application": {
    "Title": "Smart Factory System",
    "Version": "1.0.0",
    "RefreshIntervalSeconds": 5,
    "AlarmPollingIntervalSeconds": 10,
    "SensorDataRetentionDays": 90
  }
}
