<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base Dark Colors (Industrial/SCADA Style) -->
    <Color x:Key="PrimaryBackgroundColor">#1E1E1E</Color>
    <Color x:Key="SecondaryBackgroundColor">#252526</Color>
    <Color x:Key="TertiaryBackgroundColor">#2D2D30</Color>
    <Color x:Key="CardBackgroundColor">#323232</Color>
    <Color x:Key="BorderColor">#3F3F46</Color>
    <Color x:Key="BorderLightColor">#4D4D4D</Color>

    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#CCCCCC</Color>
    <Color x:Key="TertiaryTextColor">#999999</Color>
    <Color x:Key="DisabledTextColor">#666666</Color>

    <!-- Equipment Status Colors -->
    <Color x:Key="RunningColor">#4CAF50</Color>
    <Color x:Key="IdleColor">#2196F3</Color>
    <Color x:Key="WarningColor">#FF9800</Color>
    <Color x:Key="ErrorColor">#F44336</Color>
    <Color x:Key="MaintenanceColor">#9C27B0</Color>
    <Color x:Key="OfflineColor">#607D8B</Color>
    <Color x:Key="SetupColor">#00BCD4</Color>

    <!-- Accent Colors -->
    <Color x:Key="AccentColor">#00BCD4</Color>
    <Color x:Key="AccentLightColor">#4DD0E1</Color>
    <Color x:Key="AccentDarkColor">#0097A7</Color>
    <Color x:Key="HighlightColor">#03A9F4</Color>

    <!-- Alarm Severity Colors -->
    <Color x:Key="AlarmCriticalColor">#D32F2F</Color>
    <Color x:Key="AlarmErrorColor">#F44336</Color>
    <Color x:Key="AlarmWarningColor">#FFA726</Color>
    <Color x:Key="AlarmInfoColor">#29B6F6</Color>

    <!-- Semantic Colors -->
    <Color x:Key="PrimaryColor">#00BCD4</Color>
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="DangerColor">#F44336</Color>
    <Color x:Key="InfoColor">#2196F3</Color>

    <!-- Chart Colors -->
    <Color x:Key="ChartPrimaryColor">#00BCD4</Color>
    <Color x:Key="ChartSecondaryColor">#4CAF50</Color>
    <Color x:Key="ChartTertiaryColor">#FF9800</Color>
    <Color x:Key="ChartQuaternaryColor">#9C27B0</Color>
    <Color x:Key="ChartQuinaryColor">#E91E63</Color>
    <Color x:Key="ChartSenaryColor">#3F51B5</Color>

    <!-- Extended Chart Palette -->
    <Color x:Key="ChartColor1">#00BCD4</Color>
    <Color x:Key="ChartColor2">#4CAF50</Color>
    <Color x:Key="ChartColor3">#FF9800</Color>
    <Color x:Key="ChartColor4">#9C27B0</Color>
    <Color x:Key="ChartColor5">#E91E63</Color>
    <Color x:Key="ChartColor6">#3F51B5</Color>
    <Color x:Key="ChartColor7">#009688</Color>
    <Color x:Key="ChartColor8">#CDDC39</Color>

    <!-- OEE Specific Colors -->
    <Color x:Key="OeeExcellentColor">#4CAF50</Color>
    <Color x:Key="OeeGoodColor">#8BC34A</Color>
    <Color x:Key="OeeAcceptableColor">#FFEB3B</Color>
    <Color x:Key="OeePoorColor">#FF9800</Color>
    <Color x:Key="OeeCriticalColor">#F44336</Color>

    <!-- Gauge Colors -->
    <Color x:Key="GaugeBackgroundColor">#2D2D30</Color>
    <Color x:Key="GaugeNeedleColor">#FFFFFF</Color>
    <Color x:Key="GaugeTickColor">#666666</Color>

    <!-- Health Score Colors -->
    <Color x:Key="HealthExcellentColor">#4CAF50</Color>
    <Color x:Key="HealthGoodColor">#8BC34A</Color>
    <Color x:Key="HealthFairColor">#FFEB3B</Color>
    <Color x:Key="HealthPoorColor">#FF9800</Color>
    <Color x:Key="HealthCriticalColor">#F44336</Color>

    <!-- Sensor Data Colors -->
    <Color x:Key="TemperatureColor">#F44336</Color>
    <Color x:Key="VibrationColor">#FF9800</Color>
    <Color x:Key="PressureColor">#2196F3</Color>
    <Color x:Key="PowerColor">#FFEB3B</Color>
    <Color x:Key="SpeedColor">#4CAF50</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="{StaticResource TertiaryBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}"/>

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="{StaticResource TertiaryTextColor}"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource DisabledTextColor}"/>

    <SolidColorBrush x:Key="RunningBrush" Color="{StaticResource RunningColor}"/>
    <SolidColorBrush x:Key="IdleBrush" Color="{StaticResource IdleColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="MaintenanceBrush" Color="{StaticResource MaintenanceColor}"/>
    <SolidColorBrush x:Key="OfflineBrush" Color="{StaticResource OfflineColor}"/>
    <SolidColorBrush x:Key="SetupBrush" Color="{StaticResource SetupColor}"/>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}"/>
    <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource HighlightColor}"/>

    <SolidColorBrush x:Key="AlarmCriticalBrush" Color="{StaticResource AlarmCriticalColor}"/>
    <SolidColorBrush x:Key="AlarmErrorBrush" Color="{StaticResource AlarmErrorColor}"/>
    <SolidColorBrush x:Key="AlarmWarningBrush" Color="{StaticResource AlarmWarningColor}"/>
    <SolidColorBrush x:Key="AlarmInfoBrush" Color="{StaticResource AlarmInfoColor}"/>

    <!-- Semantic Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>

    <!-- Chart Brushes -->
    <SolidColorBrush x:Key="ChartPrimaryBrush" Color="{StaticResource ChartPrimaryColor}"/>
    <SolidColorBrush x:Key="ChartSecondaryBrush" Color="{StaticResource ChartSecondaryColor}"/>
    <SolidColorBrush x:Key="ChartTertiaryBrush" Color="{StaticResource ChartTertiaryColor}"/>
    <SolidColorBrush x:Key="ChartQuaternaryBrush" Color="{StaticResource ChartQuaternaryColor}"/>
    <SolidColorBrush x:Key="ChartQuinaryBrush" Color="{StaticResource ChartQuinaryColor}"/>
    <SolidColorBrush x:Key="ChartSenaryBrush" Color="{StaticResource ChartSenaryColor}"/>

    <!-- OEE Brushes -->
    <SolidColorBrush x:Key="OeeExcellentBrush" Color="{StaticResource OeeExcellentColor}"/>
    <SolidColorBrush x:Key="OeeGoodBrush" Color="{StaticResource OeeGoodColor}"/>
    <SolidColorBrush x:Key="OeeAcceptableBrush" Color="{StaticResource OeeAcceptableColor}"/>
    <SolidColorBrush x:Key="OeePoorBrush" Color="{StaticResource OeePoorColor}"/>
    <SolidColorBrush x:Key="OeeCriticalBrush" Color="{StaticResource OeeCriticalColor}"/>

    <!-- Gauge Brushes -->
    <SolidColorBrush x:Key="GaugeBackgroundBrush" Color="{StaticResource GaugeBackgroundColor}"/>
    <SolidColorBrush x:Key="GaugeNeedleBrush" Color="{StaticResource GaugeNeedleColor}"/>
    <SolidColorBrush x:Key="GaugeTickBrush" Color="{StaticResource GaugeTickColor}"/>

    <!-- Health Score Brushes -->
    <SolidColorBrush x:Key="HealthExcellentBrush" Color="{StaticResource HealthExcellentColor}"/>
    <SolidColorBrush x:Key="HealthGoodBrush" Color="{StaticResource HealthGoodColor}"/>
    <SolidColorBrush x:Key="HealthFairBrush" Color="{StaticResource HealthFairColor}"/>
    <SolidColorBrush x:Key="HealthPoorBrush" Color="{StaticResource HealthPoorColor}"/>
    <SolidColorBrush x:Key="HealthCriticalBrush" Color="{StaticResource HealthCriticalColor}"/>

    <!-- Sensor Data Brushes -->
    <SolidColorBrush x:Key="TemperatureBrush" Color="{StaticResource TemperatureColor}"/>
    <SolidColorBrush x:Key="VibrationBrush" Color="{StaticResource VibrationColor}"/>
    <SolidColorBrush x:Key="PressureBrush" Color="{StaticResource PressureColor}"/>
    <SolidColorBrush x:Key="PowerBrush" Color="{StaticResource PowerColor}"/>
    <SolidColorBrush x:Key="SpeedBrush" Color="{StaticResource SpeedColor}"/>

</ResourceDictionary>
