<UserControl x:Class="SmartFactory.Presentation.Views.Reports.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{StaticResource TertiaryBackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="Reports &amp; Analytics"
                       Style="{StaticResource HeaderTextStyle}"/>
            <Button Grid.Column="1"
                    Command="{Binding GenerateReportCommand}"
                    Style="{StaticResource IndustrialButtonStyle}"
                    Padding="12,8">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Refresh" Width="16" Height="16" Margin="0,0,8,0"/>
                    <TextBlock Text="Refresh"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Controls -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Report Type Selection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <RadioButton Content="OEE"
                                 GroupName="ReportType"
                                 IsChecked="{Binding SelectedReportType, Converter={StaticResource StringEqualityConverter}, ConverterParameter=OEE}"
                                 Style="{StaticResource {x:Type RadioButton}}"
                                 Margin="0,0,16,0"
                                 Padding="16,8"/>
                    <RadioButton Content="Production"
                                 GroupName="ReportType"
                                 IsChecked="{Binding SelectedReportType, Converter={StaticResource StringEqualityConverter}, ConverterParameter=Production}"
                                 Style="{StaticResource {x:Type RadioButton}}"
                                 Margin="0,0,16,0"
                                 Padding="16,8"/>
                    <RadioButton Content="Quality"
                                 GroupName="ReportType"
                                 IsChecked="{Binding SelectedReportType, Converter={StaticResource StringEqualityConverter}, ConverterParameter=Quality}"
                                 Style="{StaticResource {x:Type RadioButton}}"
                                 Margin="0,0,16,0"
                                 Padding="16,8"/>
                    <RadioButton Content="Maintenance"
                                 GroupName="ReportType"
                                 IsChecked="{Binding SelectedReportType, Converter={StaticResource StringEqualityConverter}, ConverterParameter=Maintenance}"
                                 Style="{StaticResource {x:Type RadioButton}}"
                                 Margin="0,0,16,0"
                                 Padding="16,8"/>
                </StackPanel>

                <!-- Date Range Presets -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Today" Command="{Binding SetDateRangeCommand}" CommandParameter="Today"
                            Style="{StaticResource IndustrialButtonStyle}" Margin="0,0,8,0" Padding="12,6"/>
                    <Button Content="Week" Command="{Binding SetDateRangeCommand}" CommandParameter="Week"
                            Style="{StaticResource IndustrialButtonStyle}" Margin="0,0,8,0" Padding="12,6"/>
                    <Button Content="Month" Command="{Binding SetDateRangeCommand}" CommandParameter="Month"
                            Style="{StaticResource IndustrialButtonStyle}" Margin="0,0,8,0" Padding="12,6"/>
                    <Button Content="Quarter" Command="{Binding SetDateRangeCommand}" CommandParameter="Quarter"
                            Style="{StaticResource IndustrialButtonStyle}" Margin="0,0,8,0" Padding="12,6"/>
                    <Button Content="Year" Command="{Binding SetDateRangeCommand}" CommandParameter="Year"
                            Style="{StaticResource IndustrialButtonStyle}" Padding="12,6"/>

                    <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="16,4"/>

                    <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <DatePicker SelectedDate="{Binding StartDate}" Width="120" Margin="0,0,16,0"/>
                    <TextBlock Text="To:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <DatePicker SelectedDate="{Binding EndDate}" Width="120"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Report Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Main Report Area -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,16,0">
                <Grid>
                    <!-- OEE Report -->
                    <StackPanel Visibility="{Binding SelectedReportType, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=OEE}">
                        <TextBlock Text="Overall Equipment Effectiveness (OEE)"
                                   FontSize="18" FontWeight="SemiBold"
                                   Margin="0,0,0,24"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- OEE Score -->
                            <Border Grid.Column="0" Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8" Margin="8" Padding="24">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding OeeReport.OverallOee, StringFormat='{}{0:P1}', FallbackValue='--'}"
                                               FontSize="48" FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="OEE Score"
                                               FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Availability -->
                            <Border Grid.Column="1" Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8" Margin="8" Padding="24">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding OeeReport.Availability, StringFormat='{}{0:P1}', FallbackValue='--'}"
                                               FontSize="36" FontWeight="Bold"
                                               Foreground="#4CAF50"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Availability"
                                               FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Performance -->
                            <Border Grid.Column="2" Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8" Margin="8" Padding="24">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding OeeReport.Performance, StringFormat='{}{0:P1}', FallbackValue='--'}"
                                               FontSize="36" FontWeight="Bold"
                                               Foreground="#2196F3"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Performance"
                                               FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Quality -->
                            <Border Grid.Column="3" Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8" Margin="8" Padding="24">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding OeeReport.Quality, StringFormat='{}{0:P1}', FallbackValue='--'}"
                                               FontSize="36" FontWeight="Bold"
                                               Foreground="#FF9800"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Quality"
                                               FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Additional OEE Metrics -->
                        <Grid Margin="0,24,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding OeeReport.TotalProductionTime, StringFormat='{}{0:N0} hrs', FallbackValue='--'}"
                                           FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Production Time" Foreground="{StaticResource SecondaryTextBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding OeeReport.TotalDowntime, StringFormat='{}{0:N0} min', FallbackValue='--'}"
                                           FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center"
                                           Foreground="{StaticResource ErrorBrush}"/>
                                <TextBlock Text="Total Downtime" Foreground="{StaticResource SecondaryTextBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding OeeReport.TotalDefects, StringFormat='{}{0:N0}', FallbackValue='--'}"
                                           FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center"
                                           Foreground="{StaticResource WarningBrush}"/>
                                <TextBlock Text="Total Defects" Foreground="{StaticResource SecondaryTextBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Production Report -->
                    <StackPanel Visibility="{Binding SelectedReportType, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Production}">
                        <TextBlock Text="Production Report"
                                   FontSize="18" FontWeight="SemiBold"
                                   Margin="0,0,0,24"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8" Margin="8" Padding="24">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding ProductionReport.TotalCompletedQuantity, StringFormat='{}{0:N0}', FallbackValue='--'}"
                                               FontSize="36" FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Total Produced"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8" Margin="8" Padding="24">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding ProductionReport.CompletedWorkOrders, StringFormat='{}{0:N0}', FallbackValue='--'}"
                                               FontSize="36" FontWeight="Bold"
                                               Foreground="#4CAF50"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Completed Orders"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8" Margin="8" Padding="24">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding ProductionReport.OnScheduleRate, StringFormat='{}{0:P1}', FallbackValue='--'}"
                                               FontSize="36" FontWeight="Bold"
                                               Foreground="#2196F3"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="On-Schedule Rate"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <!-- Quality Report -->
                    <StackPanel Visibility="{Binding SelectedReportType, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Quality}">
                        <TextBlock Text="Quality Report"
                                   FontSize="18" FontWeight="SemiBold"
                                   Margin="0,0,0,24"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8" Margin="8" Padding="24">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding QualityReport.PassRate, StringFormat='{}{0:P1}', FallbackValue='--'}"
                                               FontSize="36" FontWeight="Bold"
                                               Foreground="#4CAF50"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Pass Rate"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8" Margin="8" Padding="24">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding QualityReport.TotalInspections, StringFormat='{}{0:N0}', FallbackValue='--'}"
                                               FontSize="36" FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Total Inspections"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8" Margin="8" Padding="24">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding QualityReport.TotalDefects, StringFormat='{}{0:N0}', FallbackValue='--'}"
                                               FontSize="36" FontWeight="Bold"
                                               Foreground="{StaticResource ErrorBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Total Defects"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>

                    <!-- Maintenance Report -->
                    <StackPanel Visibility="{Binding SelectedReportType, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Maintenance}">
                        <TextBlock Text="Maintenance Report"
                                   FontSize="18" FontWeight="SemiBold"
                                   Margin="0,0,0,24"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8" Margin="8" Padding="24">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding MaintenanceReport.TotalScheduled, StringFormat='{}{0:N0}', FallbackValue='--'}"
                                               FontSize="36" FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Total Scheduled"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8" Margin="8" Padding="24">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding MaintenanceReport.TotalDowntimeMinutes, StringFormat='{}{0:N0} min', FallbackValue='--'}"
                                               FontSize="36" FontWeight="Bold"
                                               Foreground="#FF9800"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Total Downtime"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8" Margin="8" Padding="24">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding MaintenanceReport.TotalCost, StringFormat='${0:N0}', FallbackValue='--'}"
                                               FontSize="36" FontWeight="Bold"
                                               Foreground="{StaticResource ErrorBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Total Cost"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Equipment Efficiency Sidebar -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Equipment Efficiency"
                               FontSize="16" FontWeight="SemiBold"
                               Margin="0,0,0,16"/>

                    <ItemsControl ItemsSource="{Binding EquipmentEfficiency}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SecondaryBackgroundBrush}"
                                        CornerRadius="4"
                                        Padding="12"
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding EquipmentName}"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding EfficiencyRate, StringFormat='{}{0:P1}'}"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryBrush}"/>

                                        <ProgressBar Grid.Row="1" Grid.ColumnSpan="2"
                                                     Value="{Binding EfficiencyRate}"
                                                     Maximum="1"
                                                     Height="6"
                                                     Margin="0,8,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="Generating Report..."
                           Foreground="White"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
