<UserControl x:Class="SmartFactory.Presentation.Views.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{StaticResource TertiaryBackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Settings"
                   Style="{StaticResource HeaderTextStyle}"
                   Margin="0,0,0,24"/>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Tab Navigation -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,16,0">
                <ItemsControl ItemsSource="{Binding Tabs}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}"
                                    Command="{Binding DataContext.SelectTabCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding}"
                                    HorizontalContentAlignment="Left"
                                    Padding="16,12"
                                    Margin="0,2">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource IndustrialButtonStyle}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Value="True">
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource EqualityConverter}">
                                                        <Binding/>
                                                        <Binding Path="DataContext.SelectedTab" RelativeSource="{RelativeSource AncestorType=ItemsControl}"/>
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <!-- Tab Content -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <!-- Factories Tab -->
                        <StackPanel Visibility="{Binding SelectedTab, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Factories}">
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Factory Management"
                                           FontSize="18" FontWeight="SemiBold"/>
                                <Button Grid.Column="1"
                                        Content="Add Factory"
                                        Command="{Binding ShowAddFactoryDialogCommand}"
                                        Style="{StaticResource IndustrialButtonStyle}"/>
                            </Grid>

                            <DataGrid ItemsSource="{Binding Factories}"
                                      SelectedItem="{Binding SelectedFactory}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      RowBackground="{StaticResource SecondaryBackgroundBrush}"
                                      AlternatingRowBackground="{StaticResource TertiaryBackgroundBrush}"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                                      MaxHeight="400">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="100"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="150"/>
                                    <DataGridTextColumn Header="Time Zone" Binding="{Binding TimeZone}" Width="100"/>

                                    <DataGridTemplateColumn Header="Status" Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding StatusColor}"
                                                        CornerRadius="4"
                                                        Padding="8,4"
                                                        HorizontalAlignment="Left">
                                                    <TextBlock Text="{Binding StatusDisplay}"
                                                               Foreground="White"
                                                               FontWeight="SemiBold"
                                                               FontSize="11"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="Actions" Width="200">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="Edit"
                                                            Command="{Binding DataContext.ShowEditFactoryDialogCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource IndustrialButtonStyle}"
                                                            Padding="8,4"
                                                            Margin="0,0,4,0"/>
                                                    <Button Content="Set Current"
                                                            Command="{Binding DataContext.SetCurrentFactoryCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource IndustrialButtonStyle}"
                                                            Padding="8,4"
                                                            Margin="0,0,4,0"/>
                                                    <Button Content="Delete"
                                                            Command="{Binding DataContext.DeleteFactoryCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource IndustrialButtonStyle}"
                                                            Padding="8,4"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <!-- Production Lines Tab -->
                        <StackPanel Visibility="{Binding SelectedTab, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Production Lines'}">
                            <TextBlock Text="Production Lines"
                                       FontSize="18" FontWeight="SemiBold"
                                       Margin="0,0,0,16"/>
                            <TextBlock Text="Production line management coming soon..."
                                       Foreground="{StaticResource SecondaryTextBrush}"/>
                        </StackPanel>

                        <!-- Application Tab -->
                        <StackPanel Visibility="{Binding SelectedTab, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Application}">
                            <TextBlock Text="Application Settings"
                                       FontSize="18" FontWeight="SemiBold"
                                       Margin="0,0,0,24"/>

                            <Grid MaxWidth="500" HorizontalAlignment="Left">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="Refresh Interval (sec):"
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,16"/>
                                <TextBox Grid.Row="0" Grid.Column="1"
                                         Text="{Binding RefreshInterval}"
                                         Width="100"
                                         HorizontalAlignment="Left"
                                         Margin="0,0,0,16"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Enable Notifications:"
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,16"/>
                                <CheckBox Grid.Row="1" Grid.Column="1"
                                          IsChecked="{Binding EnableNotifications}"
                                          HorizontalAlignment="Left"
                                          Margin="0,0,0,16"/>

                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="Enable Sounds:"
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,16"/>
                                <CheckBox Grid.Row="2" Grid.Column="1"
                                          IsChecked="{Binding EnableSounds}"
                                          HorizontalAlignment="Left"
                                          Margin="0,0,0,16"/>

                                <TextBlock Grid.Row="3" Grid.Column="0"
                                           Text="Theme:"
                                           VerticalAlignment="Center"
                                           Margin="0,0,0,16"/>
                                <ComboBox Grid.Row="3" Grid.Column="1"
                                          SelectedItem="{Binding Theme}"
                                          Width="150"
                                          HorizontalAlignment="Left"
                                          Margin="0,0,0,16">
                                    <ComboBoxItem Content="Dark"/>
                                    <ComboBoxItem Content="Light"/>
                                </ComboBox>

                                <Button Grid.Row="4" Grid.Column="1"
                                        Content="Save Settings"
                                        Command="{Binding SaveAppSettingsCommand}"
                                        Style="{StaticResource IndustrialButtonStyle}"
                                        HorizontalAlignment="Left"
                                        Padding="24,12"/>
                            </Grid>
                        </StackPanel>

                        <!-- About Tab -->
                        <StackPanel Visibility="{Binding SelectedTab, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=About}">
                            <TextBlock Text="About"
                                       FontSize="18" FontWeight="SemiBold"
                                       Margin="0,0,0,24"/>

                            <Border Background="{StaticResource SecondaryBackgroundBrush}"
                                    CornerRadius="8"
                                    Padding="24"
                                    MaxWidth="500"
                                    HorizontalAlignment="Left">
                                <StackPanel>
                                    <TextBlock Text="{Binding AppName}"
                                               FontSize="24" FontWeight="Bold"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Margin="0,0,0,16">
                                        <Run Text="Version: "/>
                                        <Run Text="{Binding AppVersion}" FontWeight="SemiBold"/>
                                    </TextBlock>

                                    <Rectangle Height="1" Fill="{StaticResource BorderBrush}" Margin="0,0,0,16"/>

                                    <TextBlock Text="A comprehensive industrial control and monitoring system for smart manufacturing operations."
                                               TextWrapping="Wrap"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               Margin="0,0,0,16"/>

                                    <TextBlock Text="Features:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <StackPanel Margin="16,0,0,0">
                                        <TextBlock Text="• Real-time equipment monitoring"/>
                                        <TextBlock Text="• Work order management"/>
                                        <TextBlock Text="• Alarm and notification system"/>
                                        <TextBlock Text="• Maintenance scheduling"/>
                                        <TextBlock Text="• Quality control tracking"/>
                                        <TextBlock Text="• OEE analytics and reporting"/>
                                    </StackPanel>

                                    <Rectangle Height="1" Fill="{StaticResource BorderBrush}" Margin="0,16"/>

                                    <TextBlock Text="Built with .NET 8 and WPF"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Factory Dialog -->
        <Border Grid.RowSpan="2"
                Background="#80000000"
                Visibility="{Binding IsFactoryDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{StaticResource PrimaryBackgroundBrush}"
                    CornerRadius="8"
                    Padding="24"
                    Width="500"
                    MaxHeight="650"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Add Factory"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                            <Setter Property="Text" Value="Edit Factory"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                                <TextBlock Text="Code:" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding FactoryCode}"
                                         IsEnabled="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,12">
                                <TextBlock Text="Name:" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding FactoryName}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,12">
                                <TextBlock Text="Location:" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding FactoryLocation}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,12">
                                <TextBlock Text="Time Zone:" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding FactoryTimeZone}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,12">
                                <TextBlock Text="Contact Email:" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding FactoryContactEmail}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,12">
                                <TextBlock Text="Contact Phone:" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding FactoryContactPhone}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Description:" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding FactoryDescription}"
                                 Height="80"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Cancel"
                                    Command="{Binding CloseFactoryDialogCommand}"
                                    Style="{StaticResource IndustrialButtonStyle}"
                                    Margin="0,0,8,0"/>
                            <Button Content="Save"
                                    Command="{Binding SaveFactoryCommand}"
                                    Style="{StaticResource IndustrialButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="2"
                Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="Loading..."
                           Foreground="White"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
