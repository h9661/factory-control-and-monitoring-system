<UserControl x:Class="SmartFactory.Presentation.Views.Alarms.AlarmsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{StaticResource TertiaryBackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="Alarm Management"
                       Style="{StaticResource HeaderTextStyle}"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Acknowledge All Active"
                        Command="{Binding AcknowledgeAllActiveCommand}"
                        Style="{StaticResource IndustrialButtonStyle}"
                        Margin="0,0,8,0"/>
                <Button Command="{Binding RefreshCommand}"
                        Style="{StaticResource IndustrialButtonStyle}"
                        Padding="12,8">
                    <iconPacks:PackIconMaterial Kind="Refresh" Width="16" Height="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Alarm Summary Cards -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Active -->
                <Border Grid.Column="0"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding AlarmSummary.TotalActive, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource ErrorBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Active"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Critical -->
                <Border Grid.Column="1"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16"
                        Cursor="Hand">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding AlarmSummary.CriticalCount, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="#E53935"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Critical"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Error -->
                <Border Grid.Column="2"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16"
                        Cursor="Hand">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding AlarmSummary.ErrorCount, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="#FF5722"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Error"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Warning -->
                <Border Grid.Column="3"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16"
                        Cursor="Hand">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding AlarmSummary.WarningCount, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="#FFC107"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Warning"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Unacknowledged -->
                <Border Grid.Column="4"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding AlarmSummary.UnacknowledgedCount, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource WarningBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Unacknowledged"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,16,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="Tag" Value="Search alarms..."/>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding SeverityOptions}"
                          SelectedItem="{Binding SeverityFilter}"
                          Margin="0,0,16,0">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                            <Setter Property="Tag" Value="Severity"/>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>

                <ComboBox Grid.Column="2"
                          ItemsSource="{Binding StatusOptions}"
                          SelectedItem="{Binding StatusFilter}"
                          Margin="0,0,16,0">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                            <Setter Property="Tag" Value="Status"/>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>

                <CheckBox Grid.Column="3"
                          Content="Active Only"
                          IsChecked="{Binding ActiveOnlyFilter}"
                          VerticalAlignment="Center"
                          Margin="0,0,16,0"/>

                <Button Grid.Column="5"
                        Content="Clear Filters"
                        Command="{Binding ClearFiltersCommand}"
                        Style="{StaticResource IndustrialButtonStyle}"/>
            </Grid>
        </Border>

        <!-- Alarm Grid -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}">
            <DataGrid ItemsSource="{Binding Alarms}"
                      SelectedItem="{Binding SelectedAlarm}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Extended"
                      Background="Transparent"
                      BorderThickness="0"
                      RowBackground="{StaticResource SecondaryBackgroundBrush}"
                      AlternatingRowBackground="{StaticResource TertiaryBackgroundBrush}"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                      CanUserSortColumns="True">
                <DataGrid.Columns>
                    <!-- Severity Indicator -->
                    <DataGridTemplateColumn Header="" Width="8">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Rectangle Width="4" Fill="{Binding SeverityColor}" Margin="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Code" Binding="{Binding AlarmCode}" Width="100"/>

                    <DataGridTemplateColumn Header="Severity" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding SeverityColor}"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding Severity}"
                                               Foreground="White"
                                               FontWeight="SemiBold"
                                               FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" MinWidth="200"/>
                    <DataGridTextColumn Header="Equipment" Binding="{Binding EquipmentName}" Width="150"/>

                    <DataGridTemplateColumn Header="Status" Width="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding StatusColor}"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding Status}"
                                               Foreground="White"
                                               FontWeight="SemiBold"
                                               FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Occurred" Binding="{Binding OccurredAt, StringFormat='{}{0:MM/dd HH:mm:ss}'}" Width="130"/>
                    <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="80"/>
                    <DataGridTextColumn Header="Acknowledged By" Binding="{Binding AcknowledgedBy}" Width="120"/>

                    <!-- Actions -->
                    <DataGridTemplateColumn Header="Actions" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Ack"
                                            Command="{Binding DataContext.ShowAcknowledgeDialogCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            Style="{StaticResource IndustrialButtonStyle}"
                                            Padding="8,4"
                                            Margin="0,0,4,0"
                                            IsEnabled="{Binding IsActive}"/>
                                    <Button Content="Resolve"
                                            Command="{Binding DataContext.ShowResolveDialogCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            Style="{StaticResource IndustrialButtonStyle}"
                                            Padding="8,4"
                                            IsEnabled="{Binding IsActive}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>

        <!-- Pagination -->
        <Border Grid.Row="4" Style="{StaticResource CardStyle}" Margin="0,16,0,0" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding Alarms.Count, StringFormat='Showing {0} alarms'}"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource SecondaryTextBrush}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Previous"
                            Command="{Binding GoToPreviousPageCommand}"
                            Style="{StaticResource IndustrialButtonStyle}"
                            Padding="16,8"
                            Margin="0,0,8,0"/>
                    <TextBlock VerticalAlignment="Center" Margin="8,0">
                        <Run Text="Page "/>
                        <Run Text="{Binding CurrentPage}"/>
                        <Run Text=" of "/>
                        <Run Text="{Binding TotalPages}"/>
                    </TextBlock>
                    <Button Content="Next"
                            Command="{Binding GoToNextPageCommand}"
                            Style="{StaticResource IndustrialButtonStyle}"
                            Padding="16,8"
                            Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Acknowledge Dialog Overlay -->
        <Border Grid.RowSpan="5"
                Background="#80000000"
                Visibility="{Binding IsAcknowledgeDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{StaticResource PrimaryBackgroundBrush}"
                    CornerRadius="8"
                    Padding="24"
                    Width="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Acknowledge Alarm"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>
                    <TextBlock Text="User ID:"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding AcknowledgeUserId}"
                             Margin="0,0,0,16"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel"
                                Command="{Binding CloseAcknowledgeDialogCommand}"
                                Style="{StaticResource IndustrialButtonStyle}"
                                Margin="0,0,8,0"/>
                        <Button Content="Acknowledge"
                                Command="{Binding AcknowledgeAlarmCommand}"
                                Style="{StaticResource IndustrialButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Resolve Dialog Overlay -->
        <Border Grid.RowSpan="5"
                Background="#80000000"
                Visibility="{Binding IsResolveDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{StaticResource PrimaryBackgroundBrush}"
                    CornerRadius="8"
                    Padding="24"
                    Width="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Resolve Alarm"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>
                    <TextBlock Text="User ID:"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding AcknowledgeUserId}"
                             Margin="0,0,0,16"/>
                    <TextBlock Text="Resolution Notes:"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding ResolveNotes}"
                             Height="100"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,16"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel"
                                Command="{Binding CloseResolveDialogCommand}"
                                Style="{StaticResource IndustrialButtonStyle}"
                                Margin="0,0,8,0"/>
                        <Button Content="Resolve"
                                Command="{Binding ResolveAlarmCommand}"
                                Style="{StaticResource IndustrialButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="5"
                Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="Loading..."
                           Foreground="White"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
