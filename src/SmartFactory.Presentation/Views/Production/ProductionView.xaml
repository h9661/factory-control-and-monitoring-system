<UserControl x:Class="SmartFactory.Presentation.Views.Production.ProductionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{StaticResource TertiaryBackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="Production Planning"
                       Style="{StaticResource HeaderTextStyle}"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="New Work Order"
                        Command="{Binding ShowCreateDialogCommand}"
                        Style="{StaticResource IndustrialButtonStyle}"
                        Margin="0,0,8,0"/>
                <Button Command="{Binding RefreshCommand}"
                        Style="{StaticResource IndustrialButtonStyle}"
                        Padding="12,8">
                    <iconPacks:PackIconMaterial Kind="Refresh" Width="16" Height="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Production Summary Cards -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Work Orders -->
                <Border Grid.Column="0"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding ProductionSummary.TotalWorkOrders, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Orders"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Completed -->
                <Border Grid.Column="1"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding ProductionSummary.CompletedWorkOrders, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Completed"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- In Progress -->
                <Border Grid.Column="2"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding ProductionSummary.InProgressWorkOrders, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="#2196F3"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="In Progress"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Total Units -->
                <Border Grid.Column="3"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding ProductionSummary.TotalCompletedUnits, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource AccentBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Units Produced"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Yield Rate -->
                <Border Grid.Column="4"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource SuccessBrush}"
                                   HorizontalAlignment="Center">
                            <Run Text="{Binding ProductionSummary.YieldRate, FallbackValue=0, StringFormat='{}{0:F1}'}"/>
                            <Run Text="%"/>
                        </TextBlock>
                        <TextBlock Text="Yield Rate"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,16,0"/>

                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding StatusOptions}"
                          SelectedItem="{Binding StatusFilter}"
                          Margin="0,0,16,0"/>

                <ComboBox Grid.Column="2"
                          ItemsSource="{Binding PriorityOptions}"
                          SelectedItem="{Binding PriorityFilter}"
                          Margin="0,0,16,0"/>

                <Button Grid.Column="4"
                        Content="Clear Filters"
                        Command="{Binding ClearFiltersCommand}"
                        Style="{StaticResource IndustrialButtonStyle}"/>
            </Grid>
        </Border>

        <!-- Work Orders Grid -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}">
            <DataGrid ItemsSource="{Binding WorkOrders}"
                      SelectedItem="{Binding SelectedWorkOrder}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Background="Transparent"
                      BorderThickness="0"
                      RowBackground="{StaticResource SecondaryBackgroundBrush}"
                      AlternatingRowBackground="{StaticResource TertiaryBackgroundBrush}"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                      CanUserSortColumns="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Order #" Binding="{Binding OrderNumber}" Width="120"/>
                    <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="150"/>
                    <DataGridTextColumn Header="Code" Binding="{Binding ProductCode}" Width="100"/>

                    <DataGridTemplateColumn Header="Status" Width="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding StatusColor}"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding StatusDisplay}"
                                               Foreground="White"
                                               FontWeight="SemiBold"
                                               FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Priority" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding PriorityColor}"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding PriorityDisplay}"
                                               Foreground="White"
                                               FontWeight="SemiBold"
                                               FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Progress" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <ProgressBar Value="{Binding ProgressPercentage}"
                                                 Maximum="100"
                                                 Height="20"
                                                 Background="{StaticResource BorderBrush}"/>
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="White"
                                               FontSize="11">
                                        <Run Text="{Binding CompletedQuantity}"/>
                                        <Run Text="/"/>
                                        <Run Text="{Binding TargetQuantity}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Scheduled Start" Binding="{Binding ScheduledStart, StringFormat='{}{0:MM/dd/yyyy}'}" Width="110"/>
                    <DataGridTextColumn Header="Scheduled End" Binding="{Binding ScheduledEnd, StringFormat='{}{0:MM/dd/yyyy}'}" Width="110"/>

                    <!-- Actions -->
                    <DataGridTemplateColumn Header="Actions" Width="220">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Start"
                                            Command="{Binding DataContext.StartWorkOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IndustrialButtonStyle}"
                                            Padding="6,4"
                                            Margin="0,0,4,0"
                                            Visibility="{Binding CanStart, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    <Button Content="Pause"
                                            Command="{Binding DataContext.PauseWorkOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IndustrialButtonStyle}"
                                            Padding="6,4"
                                            Margin="0,0,4,0"
                                            Visibility="{Binding CanPause, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    <Button Content="Resume"
                                            Command="{Binding DataContext.ResumeWorkOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IndustrialButtonStyle}"
                                            Padding="6,4"
                                            Margin="0,0,4,0"
                                            Visibility="{Binding CanResume, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    <Button Content="Progress"
                                            Command="{Binding DataContext.ShowProgressDialogCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IndustrialButtonStyle}"
                                            Padding="6,4"
                                            Margin="0,0,4,0"
                                            Visibility="{Binding CanReportProgress, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    <Button Content="Complete"
                                            Command="{Binding DataContext.CompleteWorkOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IndustrialButtonStyle}"
                                            Padding="6,4"
                                            Margin="0,0,4,0"
                                            Visibility="{Binding CanComplete, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    <Button Content="Cancel"
                                            Command="{Binding DataContext.ShowCancelDialogCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource IndustrialButtonStyle}"
                                            Padding="6,4"
                                            Visibility="{Binding CanCancel, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Pagination -->
        <Border Grid.Row="4" Style="{StaticResource CardStyle}" Margin="0,16,0,0" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding WorkOrders.Count, StringFormat='Showing {0} work orders'}"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource SecondaryTextBrush}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Previous"
                            Command="{Binding GoToPreviousPageCommand}"
                            Style="{StaticResource IndustrialButtonStyle}"
                            Padding="16,8"
                            Margin="0,0,8,0"/>
                    <TextBlock VerticalAlignment="Center" Margin="8,0">
                        <Run Text="Page "/>
                        <Run Text="{Binding CurrentPage}"/>
                        <Run Text=" of "/>
                        <Run Text="{Binding TotalPages}"/>
                    </TextBlock>
                    <Button Content="Next"
                            Command="{Binding GoToNextPageCommand}"
                            Style="{StaticResource IndustrialButtonStyle}"
                            Padding="16,8"
                            Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Create Work Order Dialog -->
        <Border Grid.RowSpan="5"
                Background="#80000000"
                Visibility="{Binding IsCreateDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{StaticResource PrimaryBackgroundBrush}"
                    CornerRadius="8"
                    Padding="24"
                    Width="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Create Work Order"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,12">
                            <TextBlock Text="Order Number:" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding NewOrderNumber}" IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,12">
                            <TextBlock Text="Product Code:" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding NewProductCode}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,12">
                            <TextBlock Text="Product Name:" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding NewProductName}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,12">
                            <TextBlock Text="Target Quantity:" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding NewTargetQuantity}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="8,0,0,12">
                            <TextBlock Text="Priority:" Margin="0,0,0,4"/>
                            <ComboBox ItemsSource="{Binding PriorityOptions}"
                                      SelectedItem="{Binding NewPriority}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,8,12">
                            <TextBlock Text="Scheduled Start:" Margin="0,0,0,4"/>
                            <DatePicker SelectedDate="{Binding NewScheduledStart}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="8,0,0,12">
                            <TextBlock Text="Scheduled End:" Margin="0,0,0,4"/>
                            <DatePicker SelectedDate="{Binding NewScheduledEnd}"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button Content="Cancel"
                                Command="{Binding CloseCreateDialogCommand}"
                                Style="{StaticResource IndustrialButtonStyle}"
                                Margin="0,0,8,0"/>
                        <Button Content="Create"
                                Command="{Binding CreateWorkOrderCommand}"
                                Style="{StaticResource IndustrialButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Progress Dialog -->
        <Border Grid.RowSpan="5"
                Background="#80000000"
                Visibility="{Binding IsProgressDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{StaticResource PrimaryBackgroundBrush}"
                    CornerRadius="8"
                    Padding="24"
                    Width="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Report Progress"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>

                    <TextBlock Text="Completed Quantity:" Margin="0,0,0,8"/>
                    <TextBox Text="{Binding ProgressCompletedQuantity}" Margin="0,0,0,16"/>

                    <TextBlock Text="Defect Quantity:" Margin="0,0,0,8"/>
                    <TextBox Text="{Binding ProgressDefectQuantity}" Margin="0,0,0,16"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel"
                                Command="{Binding CloseProgressDialogCommand}"
                                Style="{StaticResource IndustrialButtonStyle}"
                                Margin="0,0,8,0"/>
                        <Button Content="Report"
                                Command="{Binding ReportProgressCommand}"
                                Style="{StaticResource IndustrialButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Cancel Dialog -->
        <Border Grid.RowSpan="5"
                Background="#80000000"
                Visibility="{Binding IsCancelDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{StaticResource PrimaryBackgroundBrush}"
                    CornerRadius="8"
                    Padding="24"
                    Width="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Cancel Work Order"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>

                    <TextBlock Text="Cancellation Reason:" Margin="0,0,0,8"/>
                    <TextBox Text="{Binding CancelReason}"
                             Height="100"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Margin="0,0,0,16"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Close"
                                Command="{Binding CloseCancelDialogCommand}"
                                Style="{StaticResource IndustrialButtonStyle}"
                                Margin="0,0,8,0"/>
                        <Button Content="Cancel Order"
                                Command="{Binding CancelWorkOrderCommand}"
                                Style="{StaticResource IndustrialButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="5"
                Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="Loading..."
                           Foreground="White"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
