<UserControl x:Class="SmartFactory.Presentation.Views.Equipment.EquipmentDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{StaticResource TertiaryBackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,24">
            <Button Command="{Binding GoBackCommand}"
                    Style="{StaticResource IndustrialButtonStyle}"
                    Margin="0,0,16,0">
                <iconPacks:PackIconMaterial Kind="ArrowLeft" Width="16" Height="16"/>
            </Button>
            <TextBlock Text="{Binding Title}"
                       Style="{StaticResource HeaderTextStyle}"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Equipment Info -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Equipment Information"
                               Style="{StaticResource SubHeaderTextStyle}"
                               Margin="0,0,0,16"/>

                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Code:" Style="{StaticResource CaptionTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Equipment.Code}"
                                   Style="{StaticResource BodyTextStyle}"/>
                    </Grid>

                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Type:" Style="{StaticResource CaptionTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Equipment.Type}"
                                   Style="{StaticResource BodyTextStyle}"/>
                    </Grid>

                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Status:" Style="{StaticResource CaptionTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Equipment.Status}"
                                   Style="{StaticResource BodyTextStyle}"/>
                    </Grid>

                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Manufacturer:" Style="{StaticResource CaptionTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Equipment.Manufacturer}"
                                   Style="{StaticResource BodyTextStyle}"/>
                    </Grid>

                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Model:" Style="{StaticResource CaptionTextStyle}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Equipment.Model}"
                                   Style="{StaticResource BodyTextStyle}"/>
                    </Grid>

                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Last Heartbeat:" Style="{StaticResource CaptionTextStyle}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Equipment.LastHeartbeat, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"
                                   Style="{StaticResource BodyTextStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Alarms & Maintenance -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Recent Alarms -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="12,0,0,6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Recent Alarms"
                                   Style="{StaticResource SubHeaderTextStyle}"
                                   Margin="0,0,0,8"/>
                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding RecentAlarms}"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding AlarmCode}"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding Message}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- Maintenance History -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="12,6,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Maintenance History"
                                   Style="{StaticResource SubHeaderTextStyle}"
                                   Margin="0,0,0,8"/>
                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding MaintenanceHistory}"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding ScheduledDate, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding Title}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
