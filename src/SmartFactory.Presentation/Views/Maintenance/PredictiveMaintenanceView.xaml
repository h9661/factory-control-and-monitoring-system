<UserControl x:Class="SmartFactory.Presentation.Views.Maintenance.PredictiveMaintenanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="{StaticResource TertiaryBackgroundBrush}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <iconPacks:PackIconMaterial Kind="HeartPulse" Width="28" Height="28"
                                            Foreground="{StaticResource AccentBrush}"
                                            VerticalAlignment="Center"/>
                <TextBlock Text="Predictive Maintenance" FontSize="24" FontWeight="Bold"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           Margin="12,0,0,0" VerticalAlignment="Center"/>
                <TextBlock Text="AI-Powered Equipment Health Monitoring" FontSize="14"
                           Foreground="{StaticResource SecondaryTextBrush}"
                           Margin="16,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Column="1" Command="{Binding RefreshCommand}"
                    Style="{StaticResource IndustrialButtonStyle}"
                    ToolTip="Refresh Data">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Refresh" Width="16" Height="16"/>
                    <TextBlock Text="Refresh" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Average Health Score -->
            <Border Grid.Column="0" Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="8" Padding="16" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="Average Health" FontSize="12"
                               Foreground="{StaticResource SecondaryTextBrush}"/>
                    <TextBlock Text="{Binding AverageHealthScore, StringFormat='{}{0:F1}%'}"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="All Equipment" FontSize="11"
                               Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
            </Border>

            <!-- Critical Count -->
            <Border Grid.Column="1" Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="8" Padding="16" Margin="4,0">
                <StackPanel>
                    <TextBlock Text="Critical" FontSize="12"
                               Foreground="{StaticResource ErrorBrush}"/>
                    <TextBlock Text="{Binding CriticalCount}"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource ErrorBrush}"/>
                    <TextBlock Text="Immediate Action" FontSize="11"
                               Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
            </Border>

            <!-- High Risk Count -->
            <Border Grid.Column="2" Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="8" Padding="16" Margin="4,0">
                <StackPanel>
                    <TextBlock Text="High Risk" FontSize="12"
                               Foreground="#FF5722"/>
                    <TextBlock Text="{Binding HighRiskCount}"
                               FontSize="28" FontWeight="Bold"
                               Foreground="#FF5722"/>
                    <TextBlock Text="Monitor Closely" FontSize="11"
                               Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
            </Border>

            <!-- Maintenances Due -->
            <Border Grid.Column="3" Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="8" Padding="16" Margin="4,0">
                <StackPanel>
                    <TextBlock Text="Due in 14 Days" FontSize="12"
                               Foreground="{StaticResource WarningBrush}"/>
                    <TextBlock Text="{Binding MaintenancesDueSoon}"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource WarningBrush}"/>
                    <TextBlock Text="Scheduled" FontSize="11"
                               Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
            </Border>

            <!-- Active Anomalies -->
            <Border Grid.Column="4" Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="8" Padding="16" Margin="8,0,0,0">
                <StackPanel>
                    <TextBlock Text="Anomalies" FontSize="12"
                               Foreground="{StaticResource InfoBrush}"/>
                    <TextBlock Text="{Binding ActiveAnomalies.Count}"
                               FontSize="28" FontWeight="Bold"
                               Foreground="{StaticResource InfoBrush}"/>
                    <TextBlock Text="Active Alerts" FontSize="11"
                               Foreground="{StaticResource SecondaryTextBrush}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Equipment Risk Ranking -->
            <Border Grid.Column="0" Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="8" Padding="16" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Equipment Risk Ranking" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,12"/>

                    <!-- Risk Distribution Chart -->
                    <Border Grid.Row="1" Height="180" Margin="0,0,0,12">
                        <lvc:PieChart Series="{Binding RiskDistributionSeries}"
                                      AnimationsSpeed="00:00:00.500"
                                      InitialRotation="-90"/>
                    </Border>

                    <!-- Equipment List -->
                    <ListBox Grid.Row="2"
                             ItemsSource="{Binding EquipmentHealthScores}"
                             SelectedItem="{Binding SelectedEquipment}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="0,0,0,8"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border" Background="{StaticResource PrimaryBackgroundBrush}"
                                                    CornerRadius="6" Padding="12" Cursor="Hand">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource TertiaryBackgroundBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding EquipmentName}" FontWeight="SemiBold"
                                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                                        <TextBlock Text="{Binding EquipmentCode}" FontSize="11"
                                                   Foreground="{StaticResource SecondaryTextBrush}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="{Binding DaysUntilMaintenanceRecommended, StringFormat='{}Maint. in {0}d'}"
                                                       FontSize="10" Foreground="{StaticResource SecondaryTextBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding OverallScore, StringFormat='{}{0:F0}%'}"
                                                   FontSize="18" FontWeight="Bold"
                                                   HorizontalAlignment="Right"
                                                   Foreground="{StaticResource AccentBrush}"/>
                                        <Border Padding="6,2" CornerRadius="4" HorizontalAlignment="Right">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="Critical">
                                                            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="High">
                                                            <Setter Property="Background" Value="#FF5722"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RiskLevel}" Value="Medium">
                                                            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding RiskLevel}" FontSize="10" FontWeight="SemiBold"
                                                       Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Right Panel: Equipment Details -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Selected Equipment Header -->
                <Border Grid.Row="0" Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Padding="16" Margin="8,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Health Gauge -->
                        <Grid Grid.Column="0">
                            <lvc:PieChart Series="{Binding HealthGaugeSeries}"
                                          InitialRotation="-90"
                                          MaxAngle="360"
                                          AnimationsSpeed="00:00:00.500"
                                          Width="160" Height="160"/>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding SelectedEquipment.OverallScore, StringFormat='{}{0:F0}%'}"
                                           FontSize="32" FontWeight="Bold"
                                           Foreground="{StaticResource AccentBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Health Score" FontSize="11"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <!-- Equipment Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                            <TextBlock Text="{Binding SelectedEquipment.EquipmentName}"
                                       FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryTextBrush}"/>
                            <TextBlock Text="{Binding SelectedEquipment.EquipmentCode}"
                                       FontSize="14" Foreground="{StaticResource SecondaryTextBrush}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="Trend: " Foreground="{StaticResource SecondaryTextBrush}"/>
                                <TextBlock Text="{Binding SelectedEquipment.Trend}"
                                           FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="Next Maintenance: " Foreground="{StaticResource SecondaryTextBrush}"/>
                                <TextBlock Text="{Binding SelectedEquipment.DaysUntilMaintenanceRecommended, StringFormat='{}in {0} days'}"
                                           FontWeight="SemiBold" Foreground="{StaticResource WarningBrush}"/>
                            </StackPanel>

                            <!-- Top Concerns -->
                            <ItemsControl ItemsSource="{Binding SelectedEquipment.TopConcerns}" Margin="0,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                            <iconPacks:PackIconMaterial Kind="AlertCircle" Width="12" Height="12"
                                                                        Foreground="{StaticResource WarningBrush}"
                                                                        VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding}" FontSize="12" Margin="6,0,0,0"
                                                       Foreground="{StaticResource SecondaryTextBrush}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Charts Row -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Health Trend Chart -->
                    <Border Grid.Column="0" Background="{StaticResource SecondaryBackgroundBrush}"
                            CornerRadius="8" Padding="16" Margin="8,0,4,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Health Score Trend (7 Days)" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,8"/>

                            <lvc:CartesianChart Grid.Row="1"
                                                Series="{Binding HealthTrendSeries}"
                                                XAxes="{Binding TrendXAxes}"
                                                YAxes="{Binding TrendYAxes}"
                                                AnimationsSpeed="00:00:00.500"
                                                ZoomMode="X"/>
                        </Grid>
                    </Border>

                    <!-- Component Health Chart -->
                    <Border Grid.Column="1" Background="{StaticResource SecondaryBackgroundBrush}"
                            CornerRadius="8" Padding="16" Margin="4,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Component Health" FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,8"/>

                            <lvc:CartesianChart Grid.Row="1"
                                                Series="{Binding ComponentHealthSeries}"
                                                XAxes="{Binding ComponentXAxes}"
                                                YAxes="{Binding ComponentYAxes}"
                                                AnimationsSpeed="00:00:00.500"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Active Anomalies -->
                <Border Grid.Row="2" Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Padding="16" Margin="8,8,0,0" MaxHeight="200">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Active Anomalies" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,8"/>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding ActiveAnomalies}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource PrimaryBackgroundBrush}"
                                            CornerRadius="6" Padding="12,8" Margin="0,0,8,8">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="AlertOctagon" Width="16" Height="16"
                                                                        VerticalAlignment="Center">
                                                <iconPacks:PackIconMaterial.Style>
                                                    <Style TargetType="iconPacks:PackIconMaterial">
                                                        <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Severity}" Value="Severe">
                                                                <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Severity}" Value="Significant">
                                                                <Setter Property="Foreground" Value="#FF5722"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </iconPacks:PackIconMaterial.Style>
                                            </iconPacks:PackIconMaterial>
                                            <StackPanel Margin="8,0,0,0">
                                                <TextBlock FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}">
                                                    <Run Text="{Binding EquipmentName}"/>
                                                    <Run Text=" - "/>
                                                    <Run Text="{Binding SensorName}"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding Description}" FontSize="11"
                                                           Foreground="{StaticResource SecondaryTextBrush}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <mah:ProgressRing IsActive="{Binding IsBusy}" Width="50" Height="50"/>
                <TextBlock Text="Analyzing Equipment Health..." Foreground="White" Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
