<UserControl x:Class="SmartFactory.Presentation.Views.Quality.QualityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{StaticResource TertiaryBackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="Quality Control"
                       Style="{StaticResource HeaderTextStyle}"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Record Inspection"
                        Command="{Binding ShowInspectionDialogCommand}"
                        Style="{StaticResource IndustrialButtonStyle}"
                        Margin="0,0,8,0"/>
                <Button Command="{Binding LoadDataCommand}"
                        Style="{StaticResource IndustrialButtonStyle}"
                        Padding="12,8">
                    <iconPacks:PackIconMaterial Kind="Refresh" Width="16" Height="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Summary Cards -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Today Yield Rate -->
                <Border Grid.Column="0"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding TodayYieldRate, StringFormat='{}{0:P1}'}"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Today's Yield"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Total Inspections -->
                <Border Grid.Column="1"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding DefectSummary.TotalInspections, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Inspections (30d)"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Pass Count -->
                <Border Grid.Column="2"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding DefectSummary.PassCount, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Passed"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Fail Count -->
                <Border Grid.Column="3"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding DefectSummary.FailCount, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource ErrorBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Failed"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Total Defects -->
                <Border Grid.Column="4"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8" Margin="4" Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding DefectSummary.TotalDefects, FallbackValue=0}"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="#FF9800"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Defects"
                                   FontSize="12"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,16,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="Tag" Value="Search quality records..."/>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding InspectionTypeOptions}"
                          SelectedItem="{Binding InspectionTypeFilter}"
                          Margin="0,0,16,0">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                            <Setter Property="Tag" Value="Inspection Type"/>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>

                <ComboBox Grid.Column="2"
                          ItemsSource="{Binding ResultOptions}"
                          SelectedItem="{Binding ResultFilter}"
                          Margin="0,0,16,0">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                            <Setter Property="Tag" Value="Result"/>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>

                <Button Grid.Column="4"
                        Content="Clear Filters"
                        Command="{Binding ClearFiltersCommand}"
                        Style="{StaticResource IndustrialButtonStyle}"/>
            </Grid>
        </Border>

        <!-- Quality Records Grid -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}">
            <DataGrid ItemsSource="{Binding QualityRecords}"
                      SelectedItem="{Binding SelectedRecord}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Background="Transparent"
                      BorderThickness="0"
                      RowBackground="{StaticResource SecondaryBackgroundBrush}"
                      AlternatingRowBackground="{StaticResource TertiaryBackgroundBrush}"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                      CanUserSortColumns="True">
                <DataGrid.Columns>
                    <!-- Result Indicator -->
                    <DataGridTemplateColumn Header="" Width="8">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Rectangle Width="4" Fill="{Binding ResultColor}" Margin="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Equipment" Binding="{Binding EquipmentName}" Width="150"/>
                    <DataGridTextColumn Header="Code" Binding="{Binding EquipmentCode}" Width="100"/>

                    <DataGridTemplateColumn Header="Inspection Type" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding InspectionTypeDisplay}"
                                           Foreground="{StaticResource PrimaryTextBrush}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Result" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding ResultColor}"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding ResultDisplay}"
                                               Foreground="White"
                                               FontWeight="SemiBold"
                                               FontSize="11"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Defect Type" Binding="{Binding DefectTypeDisplay}" Width="120"/>
                    <DataGridTextColumn Header="Defect Count" Binding="{Binding DefectCount}" Width="100"/>
                    <DataGridTextColumn Header="Inspected" Binding="{Binding InspectedAt, StringFormat='{}{0:MM/dd HH:mm}'}" Width="120"/>
                    <DataGridTextColumn Header="Inspector" Binding="{Binding InspectorName}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Pagination -->
        <Border Grid.Row="4" Style="{StaticResource CardStyle}" Margin="0,16,0,0" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding QualityRecords.Count, StringFormat='Showing {0} records'}"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource SecondaryTextBrush}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Margin="8,0">
                        <Run Text="Page "/>
                        <Run Text="{Binding CurrentPage}"/>
                        <Run Text=" of "/>
                        <Run Text="{Binding TotalPages}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Inspection Dialog -->
        <Border Grid.RowSpan="5"
                Background="#80000000"
                Visibility="{Binding IsInspectionDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{StaticResource PrimaryBackgroundBrush}"
                    CornerRadius="8"
                    Padding="24"
                    Width="550"
                    MaxHeight="700"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Record Inspection"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                                <TextBlock Text="Inspection Type:" Margin="0,0,0,8"/>
                                <ComboBox ItemsSource="{Binding InspectionTypeOptions}"
                                          SelectedItem="{Binding NewInspectionType}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,12">
                                <TextBlock Text="Result:" Margin="0,0,0,8"/>
                                <ComboBox ItemsSource="{Binding ResultOptions}"
                                          SelectedItem="{Binding NewResult}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,12">
                                <TextBlock Text="Sample Size:" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding NewSampleSize}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,12">
                                <TextBlock Text="Defect Count:" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding NewDefectCount}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,12">
                                <TextBlock Text="Inspector ID:" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding NewInspectorId}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,12">
                                <TextBlock Text="Inspector Name:" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding NewInspectorName}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Defect Description:" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding NewDefectDescription}"
                                 Height="60"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Notes:" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding NewNotes}"
                                 Height="60"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Cancel"
                                    Command="{Binding CloseInspectionDialogCommand}"
                                    Style="{StaticResource IndustrialButtonStyle}"
                                    Margin="0,0,8,0"/>
                            <Button Content="Record"
                                    Command="{Binding RecordInspectionCommand}"
                                    Style="{StaticResource IndustrialButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="5"
                Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="Loading..."
                           Foreground="White"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
